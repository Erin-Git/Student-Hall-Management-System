@model StudentHallManagement.ViewModels.PaymentViewModel
<style>
    #formdiv {
        background-color: #fff;
        padding: 30px;
        margin-top: 5%;
        border: 2px solid rebeccapurple;
        border-radius: 5px;
    }

    h2 {
        text-align: center;
    }

    hr {
        margin-bottom: 5%;
    }

    #button {
        float: right;
        padding: 10px 20px 10px 20px;
        background-color: rebeccapurple;
        color: #fff;
        border: none;
    }
</style>
<div class="col-lg-6 col-lg-offset-3" id="formdiv">

    <h2>Payment Submission</h2>
    <hr />
    <form asp-controller="Supervisor" asp-action="PaymentSubmission" method="post">
        <input type="hidden" asp-for="studenthallidVM" />
        <input type="hidden" asp-for="studentnameVM" />
        <input type="hidden" asp-for="departmentVM" />
        <input type="hidden" asp-for="feeamountVM" />
        <input type="hidden" asp-for="dateVM" />
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td style="text-align:center">Student's Hall ID:</td>
                    <td>@Model.studenthallidVM</td>
                </tr>
                <tr>
                    <td style="text-align:center">Student's Name:</td>
                    <td>@Model.studentnameVM</td>
                </tr>
                <tr>
                    <td style="text-align:center">Department:</td>
                    <td>@Model.departmentVM</td>
                </tr>

                <tr>
                    <td style="text-align:center">Fee Amount:</td>
                    <td>@Model.feeamountVM</td>
                </tr>
            </tbody>

        </table>
        <button type="submit" class="btn btn-primary" id="button">Pay</button>

    </form>

</div>