@model StudentHallManagement.ViewModels.FeeViewModel
@{
    ViewData["Title"] = "SetFee";
}
<style>
    #formdiv {
        background-color: #fff;
        padding: 30px;
        margin-top: 5%;
        border: 2px solid rebeccapurple;
        border-radius: 5px;
    }

    h2 {
        text-align: center;
    }

    hr {
        margin-top: 5%;
    }

    #button {
        float: right;
        padding: 10px 20px 10px 20px;
        background-color: rebeccapurple;
        color: #fff;
        border: none;
    }
</style>
<div class="col-lg-6 col-lg-offset-3" id="formdiv">

    <h2>Update Fee</h2>
    <form asp-controller="Supervisor" asp-action="UpdateFee" method="post">
        <div class="form-group">
            <label>Enter Fee Amount</label>
            <input class="form-control" placeholder="Amount" type="text" asp-for="feeamountVM" />
            <input type="hidden"asp-for="feeidVM" />
        </div>
        <button type="submit" class="btn btn-primary"id="button">Update</button>
    </form>

</div>


