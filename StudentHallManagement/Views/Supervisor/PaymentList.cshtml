@model List<StudentHallManagement.ViewModels.PaymentViewModel>

<style>
    #formdiv {
        background-color: #fff;
        padding: 30px;
        margin-top: 5%;
        border: 2px solid rebeccapurple;
        border-radius: 5px;
    }

    h2 {
        text-align: center;
    }
    hr {
        margin-bottom: 2%;
    }
    table {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
<div class="col-lg-10 col-lg-offset-2" id="formdiv">

    <h2>Payment List</h2>
    <hr />
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Serial No</th>
                <th>Student Hall ID</th>
                <th>Student's Name</th>
                <th>Department</th>
                <th>Fee Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.serialnoVM</td>
                    <td>@item.studenthallidVM</td>
                    <td>@item.studentnameVM</td>
                    <td>@item.departmentVM</td>
                    <td>@item.feeamountVM</td>
                    <td>@item.dVM</td>
                </tr>
            }
        </tbody>
    </table>
</div>



